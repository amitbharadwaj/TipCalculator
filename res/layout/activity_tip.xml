<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/ltAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/textAmount"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ltAmount"
        android:layout_toRightOf="@+id/ltAmount"
        android:ems="10"
        android:text="@string/zero" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/ltTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ltTipAdded"
        android:layout_below="@+id/ltTipAdded"
        android:layout_marginTop="30dp"
        android:text="@string/textTotal"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ltTotal"
        android:layout_alignBottom="@+id/ltTotal"
        android:layout_alignLeft="@+id/tvTip"
        android:text="@string/zero"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tvTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ltTipAdded"
        android:layout_alignBottom="@+id/ltTipAdded"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/ltTipAdded"
        android:text="@string/zero"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/ltTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/etAmount"
        android:layout_marginTop="20dp"
        android:text="@string/textTip"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RadioGroup
        android:id="@+id/rgTipPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ltTip"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/ltTip"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/rbFifteenP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:onClick="onTipSubmit"
            android:text="@string/fifteenP" />

        <RadioButton
            android:id="@+id/rbTwentyP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onTipSubmit"
            android:text="@string/twentyP" />

        <RadioButton
            android:id="@+id/rbOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onTipSubmit"
            android:text="@string/Other" />

    </RadioGroup>
    
            <EditText
            android:id="@+id/etOtherTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rgTipPercent"
            android:layout_toRightOf="@+id/rgTipPercent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/textOther"
            android:inputType="numberDecimal" />
    

    <TextView
        android:id="@+id/ltTipAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ltTip"
        android:layout_centerVertical="true"
        android:text="@string/testTipAdded"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>